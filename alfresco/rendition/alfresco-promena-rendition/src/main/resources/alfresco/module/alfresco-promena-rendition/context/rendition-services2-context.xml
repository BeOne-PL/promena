<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="renditionService2" class="pl.beone.promena.alfresco.module.rendition.external.rendition2.PromenaRenditionService2">
        <constructor-arg index="0" ref="promenaAlfrescoRenditionGetter"/>
        <constructor-arg index="1" ref="defaultAlfrescoPromenaRenditionTransformer"/>
        <constructor-arg index="2" ref="renditionDefinitionRegistry2"/>
    </bean>

    <bean id="renditionDefinitionRegistry2" class="pl.beone.promena.alfresco.module.rendition.external.rendition2.PromenaRenditionDefinitionRegistry2">
        <constructor-arg index="0" ref="memoryAlfrescoPromenaRenditionDefinitionGetter"/>
    </bean>

    <!-- *** -->

    <bean id="renditionRequestSheduler" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.util.PostTxnCallbackScheduler"/>
    </bean>

    <bean id="transformClient" parent="localTransformClient"/>

