<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="thumbnailService" class="pl.beone.promena.alfresco.module.rendition.external.thumbnail.PromenaThumbnailService">
        <constructor-arg index="0" ref="nodeService"/>
        <constructor-arg index="1" ref="thumbnailRegistry"/>
        <constructor-arg index="2" ref="promenaRenditionGetter"/>
        <constructor-arg index="3" ref="defaultPromenaRenditionTransformationExecutor"/>
    </bean>

    <bean id="thumbnailRegistry" class="pl.beone.promena.alfresco.module.rendition.external.thumbnail.PromenaThumbnailRegistry">
        <constructor-arg index="0" ref="contentService"/>
        <constructor-arg index="1" ref="memoryPromenaRenditionDefinitionGetter"/>
    </bean>
</beans>