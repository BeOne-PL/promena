<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="renditionService" class="pl.beone.promena.alfresco.module.rendition.external.rendition.PromenaRenditionService">
        <constructor-arg index="0" ref="nodeService"/>
        <constructor-arg index="1" ref="promenaAlfrescoRenditionGetter"/>
        <constructor-arg index="2" ref="defaultAlfrescoPromenaRenditionTransformer"/>
    </bean>

    <!-- *** -->

    <bean id="perform-rendition" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.PerformRenditionActionExecuter"/>
    </bean>

    <bean id="renditionDefinitionPersister" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.RenditionDefinitionPersisterImpl"/>
    </bean>

    <bean id="renditionLocationResolver" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.StandardRenditionLocationResolverImpl"/>
    </bean>

    <bean id="renderingActionResourceBundles" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent"/>
    </bean>

    <bean id="renditionPreventionRegistry" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.RenditionPreventionRegistry"/>
    </bean>

    <bean id="baseRenditionPreventionClass" abstract="true" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.RenditionPreventionRegistry$SelfRegisteringClassName"/>
    </bean>

    <bean id="preventRenditions" parent="baseRenditionPreventionClass"/>

    <bean id="baseRenderingAction" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.AbstractRenderingEngine"/>
    </bean>

    <bean id="baseTemplateRenderingAction" abstract="true" parent="baseRenderingAction"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.AbstractRenderingEngine"/>
    </bean>

    <bean id="reformat" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.ReformatRenderingEngine"/>
    </bean>

    <bean id="imageRenderingEngine" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.ImageRenderingEngine"/>
    </bean>

    <bean id="freemarkerRenderingEngine" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.FreemarkerRenderingEngine"/>
    </bean>

    <bean id="htmlRenderingEngine" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.HTMLRenderingEngine"/>
    </bean>

    <bean id="compositeRenderingEngine" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.CompositeRenderingEngine"/>
    </bean>

    <bean id="xsltRenderingEngine" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.XSLTRenderingEngine"/>
    </bean>

    <bean id="xsltFunctions" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.XSLTFunctions"/>
    </bean>

    <bean id="renditionedAspect" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.RenditionedAspect"/>
    </bean>

    <bean id="delete-rendition" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.rendition.executer.DeleteRenditionActionExecuter"/>
    </bean>

</beans>