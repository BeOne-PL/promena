<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="thumbnailService" class="pl.beone.promena.alfresco.module.rendition.external.thumbnail.PromenaThumbnailService">
        <constructor-arg index="0" ref="nodeService"/>
        <constructor-arg index="1" ref="thumbnailRegistry"/>
        <constructor-arg index="2" ref="promenaRenditionCoordinator"/>
    </bean>

    <bean id="thumbnailRegistry" class="pl.beone.promena.alfresco.module.rendition.external.thumbnail.PromenaThumbnailRegistry">
        <constructor-arg index="0" ref="promenaAlfrescoRenditionDefinitionGetter"/>
    </bean>

    <!-- *** -->

    <bean id="thumbnailRenditionConvertor" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.thumbnail.ThumbnailRenditionConvertor"/>
    </bean>

    <bean id="baseThumbnailDefinition" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.thumbnail.ThumbnailDefinition"/>
    </bean>

    <bean id="defaultImageResizeOptions" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.content.transform.magick.ImageResizeOptions"/>
    </bean>

    <bean id="defaultImageTransformationOptions" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="pl.beone.promena.alfresco.module.rendition.util.BeanUtilsKt"/>
        <property name="targetMethod" value="mock"/>
        <property name="arguments" value="org.alfresco.repo.content.transform.magick.ImageTransformationOptions"/>
    </bean>

    <bean id="thumbnailDefinitionMedium" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
